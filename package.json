{
  "name": "webpack-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/DoodleBot/webpack-boilerplate.git",
  "author": "Stephen McKenna <stephen.mckenna@icrossing.com>",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --open --env.development --progress",
    "dev:elements": "webpack-dev-server --open --env.development --env.subset=elements --progress",
    "dev:components": "webpack-dev-server --open --env.development --env.subset=components --progress",
    "dev:pages": "webpack-dev-server --open --env.development --env.subset=pages --progress",
    "prod": "rimraf dist && webpack --env.production --progress"
  },
  "devDependencies": {
    "glob": "^7.1.2",
    "handlebars": "^4.0.10",
    "handlebars-loader": "^1.5.0",
    "html-webpack-plugin": "^2.28.0",
    "merge": "^1.2.0",
    "rimraf": "^2.6.1",
    "webpack": "^2.6.0",
    "webpack-dev-server": "^2.4.5",
    "webpack-merge": "^4.1.0"
  }
}
